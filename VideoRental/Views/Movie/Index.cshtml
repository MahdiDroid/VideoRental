@model IEnumerable<VideoRental.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">Movie Name</th>
            <th scope="col">Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@m.Id</td>
            <td>@Html.ActionLink(@m.Name, $"Details/{@m.Id}")</td>

            <td></td>
        </tr>

        }


    </tbody>
</table>